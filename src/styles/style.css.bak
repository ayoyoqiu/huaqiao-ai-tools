/* ... 前面的样式保持不变 ... */

.tool-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 500;
    color: white;
    text-transform: uppercase;
}

/* 工具图标渐变背景 */
.tool-icon.chat { background: linear-gradient(135deg, #8A2BE2, #4A90E2); }
.tool-icon.image { background: linear-gradient(135deg, #FF4D4F, #FF7A45); }
.tool-icon.office { background: linear-gradient(135deg, #13C2C2, #36CFC9); }
.tool-icon.audio { background: linear-gradient(135deg, #722ED1, #2F54EB); }
.tool-icon.video { background: linear-gradient(135deg, #FA541C, #FA8C16); }

/* ... 后面的样式保持不变 ... */